{
  "version": "0.10",
  "identifier": "!!!DYNAMIC",
  "title": "!!!DYNAMIC",
  "language": "en",
  "layout": {
    "columns": 6,
    "width": 1024
  },
  "components": [
    {
      "role": "header",
      "layout": "headerImageLayout",
      "style": {
        "fill": {
          "type": "image",
          "URL": "bundle://header.jpg",
          "fillMode": "cover",
          "verticalAlignment": "bottom"
        }
      },
      "behavior": {
        "type": "parallax",
        "factor": 0.5
      },
      "components": [
        {
          "role": "container",
          "layout": "tabLayout",
          "style": "tabLayoutStyle",
          "anchor": {
            "targetAnchorPosition": "bottom"
          }
        }
      ]
    },
    {
      "role": "section",
      "layout": "bodyContainerLayout",
      "style": "bodyContainerStyle",
      "anchor": {
        "targetAnchorPosition": "bottom"
      },
      "components": [
        {
          "role": "intro",
          "layout": "dateLayout",
          "text": "!!!DATE",
          "textStyle" : "dateStyle"
        },
        {
          "role": "title",
          "text": "!!!TITLE",
          "layout": "titleLayout",
          "textStyle": "titleStyle"
        },
        {
          "role": "intro",
          "layout": "introLayout",
          "text": "!!!SUBHEAD",
          "textStyle": "introStyle"
        },
        {
          "role": "divider",
          "stroke": {
            "color": "#FFF0"
          },
          "layout": "blackStrokeLayout1",
          "style": "baseStrokeStyle"
        },
        {
          "role": "author",
          "layout": "authorLayout",
          "text": "!!!AUTHOR",
          "textStyle": "authorStyle"
        },
        {
          "role": "divider",
          "stroke": {
            "color": "#FFF0"
          },
          "layout": "blackStrokeLayout1",
          "style": "baseStrokeStyle"
        },
        {
          "role": "section",
          "components": [
            {
              "role": "heading",
              "text": "!!!SUBHEAD",
              "layout": "heading1Layout",
              "textStyle": "heading1Style",
              "format": "markdown"
            },
            {
              "role": "container",
              "style": "photoContainerStyle",
              "layout": "photoLayout",
              "components": [
                {
                  "role": "container",
                  "style": {
                    "fill": {
                      "type": "image",
                      "URL": "bundle://bodyimage1.jpg"
                    }
                  },
                  "layout": "photoLayout",
                  "animation": {
                    "type": "fade_in",
                    "userControllable": true,
                    "initialAlpha": 0.1
                  }
                }
              ]
            },
            {
              "role": "photographer",
              "text": "!!!PHOTO CREDIT",
              "layout": "creditLayout",
              "textStyle": "creditStyle"
            },      
            {
              "role": "caption",
              "text": "!!!CAPTION",
              "layout": "captionLayout",
              "textStyle": "captionStyle",
              "format": "markdown"
            }
          ]
        },
        { 
          "role": "medium_rectangle_advertisement",
          "layout": "adLayout",
          "bannerType": "standard"
        }
      ]
    },
    {
      "role": "banner_advertisement",
      "bannerType": "standard"
    }
  ],
  "componentStyles": {
    "baseStrokeStyle": {
      "border": {
        "all": {
          "width": 1,
          "color": "#CCC"
        },
        "top": false,
        "left": false,
        "right": false
      }
    },
    "bodyContainerStyle": {
      "backgroundColor": "#FFF"
    },
    "photoContainerStyle": {
      "backgroundColor": "#000"
    },
    "tabLayoutStyle": {
      "fill": {
        "type": "image",
        "URL": "bundle://elm_arrow_header.png",
        "fillMode": "fit",
        "verticalAlignment": "bottom",
        "horizontalAlignment": "center"
      }
    }
  },
  "componentTextStyles": {
    "authorStyle": {
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 16,
      "textAlignment": "left",
      "textTransform": "uppercase"
    },
    "bodyStyle": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 16,
      "lineHeight": 26,
      "textAlignment": "left"
    },
    "bodyStyleFirst": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 18,
      "lineHeight": 28,
      "textAlignment": "left",
      "dropCapStyle": {
        "fontName": "MTBaskervilleETW01-Roman",
        "numberOfLines": 2,
        "numberOfCharacters": 1,
        "textColor": "#CCC"
      }
    },
    "captionStyle": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 16,
      "lineHeight": 20,
      "textAlignment": "left"
    },
    "creditStyle": {
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 10,
      "lineHeight": 12,
      "textAlignment": "right",
      "textColor": "#444",
      "textTransform":"uppercase"
    },
    "dateStyle": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 12,
      "textAlignment": "left",
      "textTransform": "uppercase"
    },
    "heading1Style": {
      "fontName": "AvantGardeGothicITCW01Dm",
      "fontSize": 20,
      "lineHeight": 22,
      "textAlignment": "left",
      "textTransform":"uppercase"
    },
    "introStyle": {
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 24,
      "lineHeight": 30,
      "textAlignment": "center"
    },
    "lowerListStyle": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 18,
      "lineHeight": 20,
      "textAlignment": "center"
    },
    "pullquoteStyle": {
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 22,
      "lineHeight": 28,
      "textAlignment": "center",
      "textTransform":"uppercase"
    },
    "spacerWord":{
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 48,
      "lineHeight": 48,
      "textAlignment": "center",
      "textTransform": "uppercase"
    },
    "titleStyle": {
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 52,
      "lineHeight": 54,
      "textAlignment": "left",
      "textTransform": "uppercase"
    }
  },
  "componentLayouts": {
    "adLayout": {
      "margin": {
        "top": 25,
        "bottom": 25
      }
    },
    "authorLayout": {
      "margin": {
        "top": 4,
        "bottom": 4
      }
    },
    "blackStrokeLayout1":{
      "margin":{
        "top":0,
        "bottom":0
      }
    },
    "blackStrokeLayout2":{
      "margin":{
        "top":5,
        "bottom":5
      }
    },
    "blackStrokeLayout3":{
      "margin":{
        "top":10,
        "bottom":35
      }
    },
    "blackStrokeLayout4":{
      "margin":{
        "top":0,
        "bottom":25
      }
    },
    "bodyContainerLayout": {
      "ignoreDocumentMargin": true
    },
    "bodyLayout": {
      "margin": {
        "top": 35,
        "bottom": 25
      }
    },
    "captionLayout": {
      "margin": {
        "top": 10,
        "bottom": 25
      }   
    },
    "creditLayout": {
      "margin": {
        "top": 4,
        "bottom": 0
      }   
    },
    "dateLayout": {
      "margin": {
        "top": 20,
        "bottom": 5
      }
    },
    "headerImageLayout": {
      "ignoreDocumentMargin": true,
      "minimumHeight": "50vh"
    },
    "heading1Layout": {
      "margin": {
        "top": 15,
        "bottom": 10
      }
    },
    "introLayout": {
      "margin": {
        "top": 15,
        "bottom": 15
      }
    },
    "photoLayout": {
      "minimumHeight": "100cw"
    },
    "pullquoteLayout": {
      "margin": {
        "top": 25,
        "bottom": 25
      }
    },
    "spacerLayout": {
      "margin": {
        "top": 5,
        "bottom": 0
      }
    },
    "tabLayout": {
      "ignoreDocumentMargin": true,
      "minimumHeight": "40vw"
    },
    "titleLayout": {
      "margin": {
        "top": 10,
        "bottom": 30
      }
    }
  }
}