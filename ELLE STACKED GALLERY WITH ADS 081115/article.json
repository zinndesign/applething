        {
          "role": "byline",
          "text": "by MICHAEL BURNS | October 25, 2015 | 11:15 AM",
          "layout": {
            "columnStart": 0,
            "columnSpan": 7,
            "margin": {
              "top": 20,
              "bottom": 10
            }
          },
          "textStyle": "authorStyle"
        },
        {
          "role": "illustrator",
          "text": "Illustrations by LOREM IPSUM",
          "layout": {
            "columnStart": 0,
            "columnSpan": 7,
            "margin": {
              "bottom": 15
            }
          },
          "textStyle": "authorStyle"
        },
        {
          "role": "divider",
          "layout": {
            "columnStart": 0,
            "columnSpan": 7,
            "margin": {
              "top": 0,
              "bottom": 5
            }
          },
