{
  "version": "0.10",
  "identifier": "!!!DYNAMIC",
  "title": "!!!DYNAMIC",
  "language": "en",
  "layout": {
    "columns": 6,
    "width": 1024,
    "margin": 100,
    "gutter": 30
  },
  "components": [
    {
      "role": "header",
      "layout": "headerImageLayout",
      "style": {
        "fill": {
          "type": "image",
          "URL": "bundle://header.jpg",
          "fillMode": "cover",
          "verticalAlignment": "bottom"
        }
      },
      "behavior": {
        "type": "parallax",
        "factor": 0.5
      },
      "components": [
        {
          "role": "container",
          "layout": "tabLayout",
          "style": "tabLayoutStyle",
          "anchor": {
            "targetAnchorPosition": "bottom"
          }
        }
      ]
    },
    {
      "role": "section",
      "layout": "bodyContainerLayout",
      "style": "bodyContainerStyle",
      "anchor": {
        "targetAnchorPosition": "bottom"
      },
      "components": [
        {
          "role": "intro",
          "layout": "dateLayout",
          "text": "!!!DATE",
          "textStyle" : "dateStyle"
        },
        {
          "role": "title",
          "text": "!!!TITLE",
          "layout": "titleLayout",
          "textStyle": "titleStyle"
        },
        {
          "role": "divider",
          "stroke": {
            "color": "#CCC"
          },
         "layout": "blackStrokeLayout1"
        },
        {
          "role": "author",
          "layout": "authorLayout",
          "text": "!!!AUTHOR",
          "textStyle": "authorStyle"
        },
        {
          "role": "divider",
          "stroke": {
           "color": "#CCC"
          },
         "layout": "blackStrokeLayout1"
        },
        {
          "role": "section",
          "components": [
            {
              "role": "heading",
              "text": "!!!SUBHEAD",
              "layout": "heading1Layout",
              "textStyle": "heading1Style",
              "format": "markdown"
            },
            {
              "role": "container",
              "style": "photoContainerStyle",
              "layout": "photoLayout",
              "components": [
                {
                  "role": "container",
                  "style": {
                    "fill": {
                      "type": "image",
                      "URL": "bundle://bodyimage1.jpg"
                    }
                  },
                  "layout": "photoLayout",
                  "animation": {
                    "type": "fade_in",
                    "userControllable": true,
                    "initialAlpha": 0.1
                  }
                }
              ]
            },
            {
              "role": "photographer",
              "text": "!!!PHOTO CREDIT",
              "layout": "creditLayout",
              "textStyle": "creditStyle"
            },      
            {
              "role": "caption",
              "text": "!!!CAPTION",
              "layout": "captionLayout",
              "textStyle": "captionStyle",
              "format": "markdown"
            }
          ]
        },
        { 
          "role": "medium_rectangle_advertisement",
          "layout": "adLayout",
          "bannerType": "standard"
        }
      ]
    },
    {
      "role": "banner_advertisement",
      "bannerType": "standard"
    }
  ],
  "componentStyles": {
    "bodyContainerStyle": {
      "backgroundColor": "#FFF"
    },
    "photoContainerStyle": {
      "fill": {
         "type": "linear_gradient",
         "angle": 180,
         "colorStops": [
           {
             "color": "#000000"
           },
           {
             "color": "#000000"
           }
        ]
      }
    },
    "tabLayoutStyle": {
      "fill": {
        "type": "image",
        "URL": "bundle://elm_arrow_header.png",
        "fillMode": "fit",
        "verticalAlignment": "bottom",
        "horizontalAlignment": "center"
      }
    }
  },
  "componentTextStyles": {
    "introStyle": {
      "textAlignment": "center",
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 24,
      "lineHeight":30,
      "textColor": "#000"
    },
    "titleStyle": {
      "textAlignment": "left",
      "fontName": "AvantGardeGothicITCW01XLt",
      "textTransform": "uppercase",
      "fontSize": 52,
      "lineHeight": 54,
      "textColor": "#000"
    },
    "lowerListStyle": {
      "textAlignment": "center",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 18,
      "lineHeight":20,
      "textColor": "#000"
    },
    "authorStyle": {
      "identifier": "authorStyle",
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 16,
      "textColor": "#000",
      "textTransform": "uppercase",
      "textAlignment": "left"
    },
      "dateStyle": {
      "identifier": "dateStyle",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 12,
      "textColor": "#000",
      "textTransform": "uppercase",
      "textAlignment": "left"
    },
    "dropcapBodyStyle": {
      "textAlignment": "left",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 16,
      "lineHeight": 24,
      "textColor": "#777777",
      "dropCapStyle": {
        "numberOfLines": 2,
        "numberOfCharacters": 1,
        "fontName": "MTBaskervilleETW01-Roman",
        "textColor": "#777777"
      }
    },
    "bodyStyle": {
      "textAlignment": "left",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 16,
      "lineHeight": 26,
      "textColor": "#000"
    },
    "bodyStyleFirst": {
      "textAlignment": "left",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 18,
      "lineHeight": 28,
      "textColor": "#000",
      "dropCapStyle": {
        "fontName": "MTBaskervilleETW01-Roman",
        "numberOfLines": 2,
        "numberOfCharacters": 1,
        "textColor": "#cccccc"
      }
    },
    "captionStyle": {
      "textAlignment": "left",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 16,
      "lineHeight": 20,
      "textColor": "#000"
    },
    "creditStyle": {
      "textAlignment": "right",
      "fontName": "AvantGardeGothicITCW01XLt",
      "fontSize": 11,
      "lineHeight": 12,
      "textTransform":"uppercase",
      "textColor": "#444444"
    },
    "heading1Style": {
      "textAlignment": "left",
      "fontName": "AvantGardeGothicITCW01Dm",
      "fontSize": 20,
      "lineHeight": 22,
      "textTransform":"uppercase",
      "textColor": "#000"
    },

    "spacerWord":{
      "textAlignment": "center",
      "fontSize": 48,
      "lineHeight": 48,
      "textColor": "#000",
      "textTransform": "uppercase",
      "fontName": "AvantGardeGothicITCW01XLt"
    },
    "pullquoteStyle": {
      "textAlignment": "center",
      "fontName": "MTBaskervilleETW01-Roman",
      "fontSize": 22,
      "lineHeight": 28,
      "textTransform":"uppercase",
      "textColor": "#000"
    }
  },
  "componentLayouts": {
    "headerImageLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "ignoreDocumentMargin": true,
      "minimumHeight": "49vh"
    },
    "tabLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "ignoreDocumentMargin": true,
      "minimumHeight": "40vw"
    },
    "photoLayout": {
      "minimumHeight": "100cw"
    },
    "bodyContainerLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "ignoreDocumentMargin": true
    },
    "introLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 15,
        "bottom": 15
      }
    },
    "dateLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 20,
        "bottom": 5
      }
    },
    "titleLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 10,
        "bottom": 30
      }
    },
    "authorLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 4,
        "bottom": 4
      }
    },
    "adLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 25,
        "bottom": 25
      }
    },
    "bodyLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 35,
        "bottom": 25
      }
    },
    "creditLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 4,
        "bottom": 0
      }   
    },
    "captionLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 10,
        "bottom": 25
      }   
    },
    "heading1Layout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 15,
        "bottom": 10
      }
    },
    "galleryLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 25,
        "bottom": 25
      }
    },
    "bodyImageLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 15,
        "bottom": 15
      }
    },
    "pullquoteWrapLayout": {
      "columnStart": 0,
      "columnSpan": 4,
      "margin": {
        "top": 15,
        "bottom": 15
      }
    },
    "blackStrokeLayout1":{
      "columnStart": 0,
      "columnSpan": 6,
      "margin":{
        "top":0,
        "bottom":0
      }
    },
    "blackStrokeLayout2":{
      "columnStart": 0,
      "columnSpan": 6,
      "margin":{
        "top":5,
        "bottom":5
      }
           },
    "blackStrokeLayout3":{
      "columnStart": 0,
      "columnSpan": 6,
      "margin":{
        "top":10,
        "bottom":35
      }
    },
    "spacerLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "margin": {
        "top": 5,
        "bottom": 0
      }
    },
    "mosaicLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "ignoreDocumentMargin": true
    },
    "footerLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "ignoreDocumentMargin": true
    },
    "followLayout": {
      "columnStart": 0,
      "columnSpan": 6,
      "backgroundColor": "#000"
    }
  }
}